#!/usr/bin/env ruby

require_relative "../lib/user.rb"
require_relative "../lib/teacher.rb"
require_relative "../lib/student.rb"

steve = Student.new
steve.first_name = "Steve"
steve.last_name = "Jobs"

avi = Teacher.new
avi.first_name = "Avi"
avi.last_name = "Flombaum"

jim = User.new
jim.first_name = "Jim"
jim.last_name = "Brownie"

holo = Student.new
holo.first_name = "Holo"
holo.last_name = "Brownie"


some_knowledge = avi.teach 

holo.learn(some_knowledge)
holo.learn.all

puts "Holo just learned this important knowledge: '#{holo.knowledge.first}' from Avi"
